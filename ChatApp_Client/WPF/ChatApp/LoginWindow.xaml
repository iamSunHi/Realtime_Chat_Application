<Window x:Class="ChatApp.LoginWindown"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatApp"
        mc:Ignorable="d"
        Title="Login" Height="200" Width="400" Topmost="True" ResizeMode="NoResize" WindowStyle="ThreeDBorderWindow" Icon="/favicon.jpg">
    <StackPanel Margin="10" VerticalAlignment="Center">
        <DockPanel>
            <TextBlock Text="Username:" Width="70" VerticalAlignment="Center"/>
            <TextBox x:Name="UsernameTextBox" Margin="0,0,0,10" GotFocus="UsernameTextBox_GotFocus" LostFocus="UsernameTextBox_LostFocus" Padding="4,8,4,8"/>
        </DockPanel>
        <DockPanel>
            <TextBlock Text="Password:" Width="70" VerticalAlignment="Center"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10" GotFocus="PasswordBox_GotFocus" LostFocus="PasswordBox_LostFocus" Padding="4,8,4,8"/>
        </DockPanel>
        <Button x:Name="LoginBtn" Content="Login" Click="LoginButton_Click" Padding="4,8,4,8" Cursor="Hand"/>
    </StackPanel>
</Window>
